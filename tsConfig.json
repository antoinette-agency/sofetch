{
  "compilerOptions": {
    "target": "ESNext",               
    "lib": ["ES2022", "DOM"],    
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"]
}
