{
  "compilerOptions": {
    "target": "ES2019",
    "declaration": true,
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"]
}
