{
  "name": "@antoinette-agency/sofetch",
  "version": "0.1.8",
  "description": "An opinionated Fetch wrapper for JSON APIs",
  "main": "./index.cjs",
  "module": "./index.mjs",
  "types": "./index.d.ts",
  "browser": "./index.browser.js",
  "exports": {
    ".": {
      "browser": "./index.browser.js",
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.cjs"
    }
  },
  "type": "module",
  "scripts": {
    "test-server": "npx tsx testServer/testServer.ts",
    "build": "node esbuild.config.js",
    "test": "npx typedoc src/index.ts --router kind-dir --json docs.json && npm run build && tsc && jest",
    "build:node": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js",
    "build:browser": "esbuild src/index.ts --bundle --platform=browser --target=es2017 --outfile=dist/index.browser.js"
  },
  "keywords": [
    "Fetch",
    "HttpClient",
    "JSONAPI"
  ],
  "author": "Antoinette and Ludd Industries",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.13",
    "@types/busboy": "^1.5.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "busboy": "^1.6.0",
    "esbuild": "^0.25.10",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "tree-kill": "^1.2.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2"
  }
}
